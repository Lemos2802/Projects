@model IEnumerable<PeopleMarket.Models.Barraca>

@* Barracas *@

<div class="modal fade" id="addbarraca" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#3C3C3C;">
                <h1 class="modal-title fs-5 text-white">Adicionar Barraca</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="background-color:#3C3C3C;">
                <form>
                    <div class="d-flex form-group p-4 text-white">
                        <span class="d-flex justify-content-center w-25">Nome: </span>
                        <input type="text" class="form-control">
                    </div>
                    <div class="d-flex form-group p-4 text-white">
                        <span class="d-flex justify-content-center w-25">Distrito: </span>
                        <input type="text" class="form-control">
                    </div>
                    <div class="d-flex form-group p-4 text-white">
                        <span class="d-flex justify-content-center w-25">Concelho: </span>
                        <input type="text" class="form-control">
                    </div>
                    <div class="d-flex form-group p-4 text-white">
                        <span class="d-flex justify-content-center w-25">Tema: </span>
                        <input type="text" class="form-control">
                    </div>
                </form>
            </div>
            <div class="modal-footer d-flex justify-content-center" style="background-color:#3C3C3C;">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success">Confirmar</button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <span  class="miriam fs-2 mb-5">Feira de Braga</span>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card h-100" style="background-color: #8EA7C4"  type="button">
                <div class="card-body">
                    <a class="d-flex justify-content-center text-dark mt-5 mb-5 h5" style="text-decoration:none" asp-area="" asp-controller="Home" asp-action="Produto">Barraca da Dona Ac√°cia</a>
                    <p class="card-text">Roupa</p>
                    <p class="card-text"><i class="bi bi-emoji-smile"></i> <i class="bi bi-star-fill"></i> <i class="bi bi-star-fill"></i> <i class="bi bi-star-fill"></i> <i class="bi bi-star-fill"></i> <i class="bi bi-star"></i></p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card" style="background-color: #8EA7C4" type="button">
                <div class="card-body d-flex justify-content-center mt-5 mb-5">
                    <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#addbarraca"><i class="bi bi-plus-circle-fill" style="font-size: 10rem; color:#3359A3"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>